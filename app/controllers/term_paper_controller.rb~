class TermPaperController < ApplicationController
  def list_faculties
    @faculties = Faculty.find(:all)
  end

  def list_groups
    @groups = Group.find(:all, :conditions => ["faculty_id = ? AND year = ?", params[:id], 2008])
  end

  def list_students
    @students = Group.find(params[:id]).students
  end
end
